{
  "compilerOptions": {
    "target": "ES2020",
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "paths": { "@/*": ["server/*"] },
    "esModuleInterop": true,
    "strict": true,
    "outDir": "./dist/server",
    "sourceMap": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "."
  },
  "include": ["server/**/*"],
  "exclude": ["node_modules", "dist"]
}
